
#------------------------------------------------------------------------------

INCDIR= /IC:\Include \
        /IC:\SDL\Include
LIBDIR= /LIBPATH:C:\Lib \
        /LIBPATH:C:\SDL\Lib

#------------------------------------------------------------------------------

PNG_LIBS= libpng.lib zlib.lib
SYS_LIBS= glu32.lib opengl32.lib kernel32.lib user32.lib gdi32.lib
SDL_LIBS= SDL.lib SDLmain.lib

LIBS=   $(PNG_LIBS) $(SDL_LIBS) $(SYS_LIBS)
TARG=   vortex.exe
OBJS= 	png.obj  \
	img.obj  \
	main.obj

CFLAGS= /nologo /MD /Ox /EHsc /W3
LFLAGS= /nologo /subsystem:console

#------------------------------------------------------------------------------

.SUFFIXES : .cpp .obj

.cpp.obj :
	cl $(CFLAGS) /c $< $(INCDIR)

#------------------------------------------------------------------------------

$(TARG) : $(OBJS)
	link $(LFLAGS) /out:$(TARG) $(OBJS) $(LIBDIR) $(LIBS)

clean :
	del $(TARG) $(OBJS)

dist : $(TARG)
        del $(OBJS)
        del *.cpp
        del *.hpp

#------------------------------------------------------------------------------
