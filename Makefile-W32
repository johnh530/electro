
#------------------------------------------------------------------------------

INCDIR= /IC:\SDL\Include
LIBDIR= /LIBPATH:C:\SDL\Lib

#------------------------------------------------------------------------------

SYS_LIBS= glu32.lib opengl32.lib kernel32.lib user32.lib gdi32.lib
SDL_LIBS= SDL.lib SDLmain.lib

LIBS=   $(SDL_LIBS) $(SYS_LIBS)
TARG=   vortex.exe
OBJS= 	galaxy.obj \
        viewer.obj \
	main.obj

CFLAGS= /nologo /MD /Ox /W3
LFLAGS= /nologo /subsystem:console

#------------------------------------------------------------------------------

.SUFFIXES : .c .obj

.c.obj :
	cl $(CFLAGS) /c $< $(INCDIR)

#------------------------------------------------------------------------------

$(TARG) : $(OBJS)
	link $(LFLAGS) /out:$(TARG) $(OBJS) $(LIBDIR) $(LIBS)

clean :
	del $(TARG) $(OBJS)

#------------------------------------------------------------------------------
